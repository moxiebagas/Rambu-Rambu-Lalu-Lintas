<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".kuis">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="00:00:30"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/skor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textColor="#000000"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/Benar_Salah"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="benar"
        android:textIsSelectable="false"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/jawaban1"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="200dp"
        android:background="#000000"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/jawaban2"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@+id/jawaban1"
        android:background="#000000"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/jawaban3"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_alignLeft="@+id/jawaban1"
        android:layout_alignStart="@+id/jawaban1"
        android:layout_below="@+id/jawaban1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="4dp"
        android:background="#000000"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/jawaban4"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_alignEnd="@+id/jawaban2"
        android:layout_alignRight="@+id/jawaban2"
        android:layout_alignTop="@+id/jawaban3"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/soal"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter" />

</RelativeLayout>